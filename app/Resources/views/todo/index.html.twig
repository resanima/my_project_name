{% extends 'base.html.twig' %}

{% block body %}


<h2 class="page-header">Latest Todos </h2>

 <table class="table table-striped"> 
    <thead> 
      
      <tr> 
        <th>#</th> 
        <th>Todo</th> 
        <th>Due Date</th>
        <th></th> 
      </tr>

    </thead> 
    
    <tbody>
    {% for todo in todos %}

      <tr> 
        <th scope="row">{{ todo.id }}</th> 
          <td>{{ todo.name }}</td> 
          <td>{{ todo.dueDate | date() }}</td>
          <td>
          	<a href="/my_project_name/web/app_dev.php/todo/details/{{ todo.id }}" class="btn btn-success"> View </a>
          	<a href="/my_project_name/web/app_dev.php/todo/edit/{{ todo.id }}" class="btn btn-default"> Edit </a>
          	<a href="/my_project_name/web/app_dev.php/todo/delete/{{todo.id }}" class="btn btn-danger"> Delete </a>
          </td> 
      </tr> 

    {% endfor %}
    </tbody> 
 </table> 

{% endblock %}